    },
    "애드센스_최적화": {
      "광고_위치": ["본문 중간", "사이드바", "푸터"],
      "컨텐츠_길이": "최소 1000단어 이상 권장",
      "단락_구분": "적절한 단락 나누기로 가독성 향상"
    }
  }
